<% provide(:title, "新規投稿") %>

<h1 class="text-center">新規投稿</h1>

  <div class="border bg-light mb-2">
    <%= form_with(model: @post, local: true, class: "text-center") do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        
        <div class="form-group has-error">
        <p><%= f.label :who, "1.誰に贈りたいですか？" %>(必須)</p>
        <%= f.text_field :who, id: "input-who", placeholder: "例:彼女、職場の上司", class: "form-control mx-auto" %>
        <div class="cnt_area"><span class="now_cnt_who">0</span> / 50</div>
        </div>

        <p>2.その人はどんな人ですか？</p>

        <p><%= f.label :gender, "性別" %>(必須)</p>
        <%= f.select :gender, [["男性", "男性"], ["女性", "女性"]], include_blank: "選択してください" %>

        <p><%= f.label :age, "年齢" %>(必須)</p>
        <%= f.select :age, [["10代まで", "10代まで"], ["10代", "10代"], ["20代", "20代"], ["30代", "30代"], ["40代", "40代"], ["50代", "50代"], ["60代", "60代"], ["70代", "70代"], ["80代", "80代"], ["90代", "90代"], ["100代以上", "100代以上"]], include_blank: "選択してください" %>

        <p><%= f.label :job, "職業" %>(任意)</p>
        <%= f.text_field :job, id: "input-job", placeholder:"例:学生、高校教師", class: "form-control mx-auto" %>
        <div class="cnt_area"><span class="now_cnt_job">0</span> / 50</div>

        <p><%= f.label :situation, "3.どんなシチュエーションですか？" %>(必須)</p>
        <%= f.select :situation, [["誕生日祝い", "誕生日祝い"], ["結婚祝い", "結婚祝い"], ["出産祝い", "出産祝い"], ["引越祝い", "引越祝い"], ["クリスマス", "クリスマス"], ["バレンタイン", "バレンタイン"], ["ホワイトデー", "ホワイトデー"], ["合格祝い", "合格祝い"], ["入学祝い", "入学祝い"], ["卒業祝い", "卒業祝い"], ["就職祝い", "就職祝い"], ["昇進祝い", "昇進祝い"], ["記念日", "記念日"], ["送別会", "送別会"], ["送別会", "送別会"], ["母の日", "母の日"], ["父の日", "父の日"], ["敬老の日", "敬老の日"], ["お礼", "お礼"], ["パーティー", "パーティー"], ["お見舞い", "お見舞い"], ["手土産", "手土産"], ["その他", "その他"]], include_blank: "選択してください", class: "form-control" %>

        <p><%= f.label :item, "4.何を贈ろうと思っていますか？" %>(必須)</p>
        <%= f.text_field :item, id: "input-item", placeholder:"複数候補があれば、全て記入", class: "form-control mx-auto" %>
        <div class="cnt_area"><span class="now_cnt_item">0</span> / 100</div>

        <p><%= f.label :image, "5.贈りたいもののイメージ画像" %>(任意)</p>
        <%= f.file_field :image %>

        <p><%= f.label :price, "6.予算は？" %>(必須)</p>
        <%= f.select :price, [["1,000円未満", "1,000円未満"], ["1,000~2,000円", "1,000~2,000円"], ["2,000~3,000円", "2,000~3,000円"], ["3,000~5,000円", "3,000~5,000円"], ["5,000~8,000円", "5,000~8,000円"], ["8,000~10,000円", "8,000~10,000円"], ["10,000~15,000円", "10,000~15,000円"], ["15,000円以上", "15,000円以上"]], include_blank: "選択してください" %>

        <p><%= f.label :when, "7.いつ贈りたいと思っていますか？" %>(任意)</p>
        <%= f.text_field :when, id: "input-when", placeholder:"例:来週末、次に会う時", class: "form-control mx-auto" %>
        <div class="cnt_area"><span class="now_cnt_when">0</span> / 50</div>

        <div>
        <p><%= f.label :description, "8.ご自由に書いてください。" %>(任意)</p>
        <%= f.text_area :description, placeholder: "プレゼントを贈る上で悩んでいることや贈りたいものの参考URLなどをご自由に書いてください。\n質問でも構いません。", size: '30x10', id: "input-description", class: "form-control w-75 mx-auto" %>
        <div class="cnt_area"><span class="now_cnt_des">0</span> / 400</div>

        <p><%= f.submit "投稿", class: "btn btn-success btn-lg" %></p>
        </div>

    <% end %>
  </div>

<script>
jQuery(function($){
    // who入力時
    $('#input-who').on('input', function(){
        //文字数を取得
        var cnt = $(this).val().length;
        //現在の文字数を表示
        $('.now_cnt_who').text(cnt);
    });
    //リロード時に初期文字列が入っていた時の対策
    $('#input-who').trigger('input');
    // job入力時
    $('#input-job').on('input', function(){
        //文字数を取得
        var cnt = $(this).val().length;
        //現在の文字数を表示
        $('.now_cnt_job').text(cnt);
    });
    //リロード時に初期文字列が入っていた時の対策
    $('#input-job').trigger('input');
    // item入力時
    $('#input-item').on('input', function(){
        //文字数を取得
        var cnt = $(this).val().length;
        //現在の文字数を表示
        $('.now_cnt_item').text(cnt);
    });
     //リロード時に初期文字列が入っていた時の対策
    $('#input-item').trigger('input');
    // when入力時
    $('#input-when').on('input', function(){
        //文字数を取得
        var cnt = $(this).val().length;
        //現在の文字数を表示
        $('.now_cnt_when').text(cnt);
    });
    //リロード時に初期文字列が入っていた時の対策
    $('#input-when').trigger('input');
    //description入力時  
    $('#input-description').on('input', function(){
        //文字数を取得
        var cnt = $(this).val().length;
        //現在の文字数を表示
        $('.now_cnt_des').text(cnt);
    });
    //リロード時に初期文字列が入っていた時の対策
    $('#input-description').trigger('input');  
});
</script>