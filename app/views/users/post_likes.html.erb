<% provide(:title, @user.name) %>

<h1><%= @user.name %></h1>
<% @user ||= current_user %>
<div>
  <a href="<%= following_user_path(@user) %>">
    <strong id="following">
      <%= @user.following.count %>
    </strong>
    フォロー
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers">
      <%= @user.followers.count %>
    </strong>
    フォロワー
  </a>
</div>
<p>性別:<%= @user.gender %></p>
<p>年齢:<%= @user.age %>歳</p>
<p>職業:<%= @user.job %></p>
<p>出身:<%= @user.prefecture %></p>
<p>自己紹介:<%= @user.introduction %></p>

<% unless current_user?(@user) %>
  <div id="follow_form">
  <% if current_user.following?(@user) %>
    <%= render 'unfollow' %>
  <% else %>
    <%= render 'follow' %>
  <% end %>
  </div>
<% end %>

<div class="container">
  <ul class="menu">
    <li><%= link_to "投稿一覧", @user %></li>
    <li><%= link_to "回答コメント一覧", "#" %></li>
    <li><%= link_to "いいね(投稿)", user_post_likes_path(@user.id) %></li>
    <li><%= link_to "いいね(コメント)", "#" %>
  </ul>
<div>

<h3>いいね(投稿)</h3>
<% if @user.post_likes.any? %>
  <%= render @posts%>
  <%= paginate @posts %>
<% end %>