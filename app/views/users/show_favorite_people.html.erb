<% provide(:title, @title) %>
  <div>
    <h1 class="text-center">大切な人リスト</h3>
      <div class="text-center mb-2">
        <%= link_to "登録する", new_favorite_person_path, class: "btn btn-success btn-sm mb-3" %>
      </div>
    <% if @favorite_people.any? %>
      <ul class="list-unstyled">
        <%= render @favorite_people %>
        <%= paginate @favorite_people %>
      </ul>
    <% end %>
  </div>