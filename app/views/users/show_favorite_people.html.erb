<% provide(:title, @title) %>
  <div>
    <h1 class="text-center mt-3">大切な人リスト</h3>
      <div class="text-center mb-2">
        <%= link_to "登録する", new_favorite_person_path, class: "btn btn-success btn-sm mb-3" %>
      </div>
    <% if @favorite_people.any? %>
      <ul class="list-unstyled">
        <%= render @favorite_people %>
        <%= paginate @favorite_people, theme: 'twitter-bootstrap-4' , pagination_class: "justify-content-center" %>
      </ul>
    <% else %>
      <p class="text-center">あなたの大切な人の情報を登録してみよう！</p>
    <% end %>
  </div>