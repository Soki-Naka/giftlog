<% provide(:title, "ログイン") %>
<h1 class="text-center mt-3">ログイン</h1>

  <div class="card text-center bg-light w-75 mx-auto mb-2">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <div class="card-body">
        <%= f.label :email, 'メールアドレス' %>
        <br>
        <%= f.email_field :email, class: "form-control text-area mx-auto" %>
      </div>

      <div class="card-body">
        <%= f.label :password, 'パスワード' %>
        <br>
        <%= f.password_field :password, class: "form-control text-area mx-auto" %>
      </div>

      <div class="card-body">
        <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span class="small">メールアドレスとパスワードを記憶する</span>
        <% end %>
      </div>

      <div class="card-body">
        <%= f.submit "ログイン", class: "btn btn-lg btn-danger mb-3" %>
        <br><%= link_to "ゲストログイン(ポートフォリオ閲覧)", guest_path, method: :post, class: "btn btn-lg btn-warning" %>
      </div>
    <% end %>
    <%= link_to "アカウントをお持ちでない方はこちらから", signup_path, class: "small" %>
  </div>
