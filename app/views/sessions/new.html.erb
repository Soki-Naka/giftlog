<% provide(:title, "ログイン") %>
<h1 class="text-center">ログイン</h1>

  <div class="card text-center bg-light w-75 mx-auto mb-2">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <div class="card-body">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email %>
      </div>

      <div class="card-body">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password %>
      </div>

      <div class="card-body">
        <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>メールアドレスとパスワードを記憶する</span>
        <% end %>
      </div>

      <div class="card-body">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>

    <%= link_to "アカウントをお持ちでない方", signup_path %>
  </div>
