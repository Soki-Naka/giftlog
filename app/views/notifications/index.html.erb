<% provide(:title, "通知") %>

<h1 class="text-center mt-3">通知一覧</h1>
<% notifications = @notifications.where.not(visitor_id: current_user.id) %>
<% if notifications.exists? %>
  <%= render notifications %>
  <%= paginate notifications, theme: 'twitter-bootstrap-4' , pagination_class: "justify-content-center" %>
<% else %>
  <p class="text-center">通知はありません</p>
<% end %>